<h1>Gross profit  per year</h1>
<p>Gross profit = (extax - last buyprice)* quantity -discount</p>
    <%years = ['2004','2005','2006','2007','2008','2009','2010','2011','2012','2013','2014','2015','2016','2017','2018','2019','2020']
%>
<br/>
<%=
  link_to 'Back',
  items_path 
%>
<br/>
<% if @items.present?%>
<table border="1">
  <thead>
    <tr>
      <th>Year</th>
      <th>Gross profit</th>
      <th>Show Detail</th>
    </tr>
  </thead>
  <tbody>
     <% ttotal=Array.new(17) %>
        <%for  i in 0..16 %>
            <% ttotal[i]=0 %>
            <%@items[i].each do |item|%>
                <%total = (item.extax_value-item.lastbuyprice)*item.quantity-item.discount %>
                <% ttotal[i] += total%>
             <%end%>
            <tr>
                <td><%=years[i]%></td>
                <td><%=ttotal[i]%></td>
                <td>
<form method='get' action='/pages/details' >    
    <input type='hidden' name='year' value="<%=years[i]%>">
    <input type='submit'>
</form></td>
            </tr>
         <%end%>
        </tbody>
  </table>   

<%end%>


