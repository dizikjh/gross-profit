<style>
  table {
    width: 100%;
    border: 1px solid #444444;
    border-collapse: collapse;
  }
  th, td {
    border: 1px solid #444444;
  }
</style>

<p id="notice"><%= notice %></p> 

<h1>Items</h1>

<!-- Import excel file -->
<!-- function new from items_import controller-->
<%=
  link_to 'Upload from Excel',
  new_items_import_path 
%>
 |
<%=
  link_to 'Monthly View of extax',
  pages_home_path 
%>
 |
<%=
  link_to 'Gross profit per year',
  pages_contact_path 
%>
 |
<%= link_to 'Destroy_all', destroy_all_items_url , data: { confirm: 'Are you sure?' }%>

<table>
  <thead>
    <tr>
      <th>APN code</th>
      <th>R.R.P.</th>
      <th>Last Buy Price</th>
      <th>Item description</th>
      <th>Author</th>
      <th>Category</th>
      <th>Stock On Hand</th>
      <th>Trans Date</th>
      <th>Trans Time</th>
      <th>Document Number</th>
      <th>Reference Number</th>
      <th>Quantity</th>
      <th>extax value</th>
      <th>tax	    </th>
      <th>discount </th>

      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.apncode %></td>
        <td><%= item.rrp %></td>
        <td><%= item.lastbuyprice %></td>
        <td><%= item.description %></td>
        <td><%= item.author %></td>
        <td><%= item.pcategory %></td>
        <td><%= item.stock %></td>
        <td><%= item.date	 %></td>
        <td><%= item.time	 %></td>
        <td><%= item.doc_num %></td>
        <td><%= item.ref_num	 %></td>
        <td><%= item.quantity	 %></td>
        <td><%= item.extax_value	 %></td>
        <td><%= item.tax %></td>
        <td><%= item.discount %></td>

        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

